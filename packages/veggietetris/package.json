    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "./logs/coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
